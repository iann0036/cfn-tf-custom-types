{
    "typeName": "Terraform::OCI::CoreVolumeAttachment",
    "description": "This resource provides the Volume Attachment resource in Oracle Cloud Infrastructure Core service.\n\nAttaches the specified storage volume to the specified instance.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {
        "Timeouts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Create": {
                    "type": "string"
                },
                "Delete": {
                    "type": "string"
                },
                "Update": {
                    "type": "string"
                }
            },
            "required": []
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "AttachmentType": {
            "type": "string",
            "description": "The type of volume. The only supported value are \"iscsi\" and \"paravirtualized\"."
        },
        "AvailabilityDomain": {
            "type": "string"
        },
        "ChapSecret": {
            "type": "string"
        },
        "ChapUsername": {
            "type": "string"
        },
        "CompartmentId": {
            "type": "string"
        },
        "Device": {
            "type": "string",
            "description": "The device name."
        },
        "DisplayName": {
            "type": "string",
            "description": "A user-friendly name. Does not have to be unique, and it cannot be changed. Avoid entering confidential information."
        },
        "Id": {
            "type": "string"
        },
        "InstanceId": {
            "type": "string",
            "description": "The OCID of the instance."
        },
        "Ipv4": {
            "type": "string"
        },
        "Iqn": {
            "type": "string"
        },
        "IsPvEncryptionInTransitEnabled": {
            "type": "boolean",
            "description": "Whether to enable in-transit encryption for the data volume's paravirtualized attachment. The default value is false."
        },
        "IsReadOnly": {
            "type": "boolean",
            "description": "Whether the attachment was created in read-only mode."
        },
        "IsShareable": {
            "type": "boolean",
            "description": "Whether the attachment should be created in shareable mode. If an attachment is created in shareable mode, then other instances can attach the same volume, provided that they also create their attachments in shareable mode. Only certain volume types can be attached in shareable mode. Defaults to false if not specified."
        },
        "Port": {
            "type": "number"
        },
        "State": {
            "type": "string"
        },
        "TimeCreated": {
            "type": "string"
        },
        "UseChap": {
            "type": "boolean",
            "description": "Whether to use CHAP authentication for the volume attachment. Defaults to false."
        },
        "VolumeId": {
            "type": "string",
            "description": "The OCID of the volume."
        },
        "Timeouts": {
            "$ref": "#/definitions/Timeouts"
        }
    },
    "additionalProperties": false,
    "required": [
        "AttachmentType",
        "InstanceId",
        "VolumeId"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/AvailabilityDomain",
        "/properties/ChapSecret",
        "/properties/ChapUsername",
        "/properties/Id",
        "/properties/Ipv4",
        "/properties/Iqn",
        "/properties/Port",
        "/properties/State",
        "/properties/TimeCreated"
    ],
    "primaryIdentifier": [
        "/properties/tfcfnid"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}