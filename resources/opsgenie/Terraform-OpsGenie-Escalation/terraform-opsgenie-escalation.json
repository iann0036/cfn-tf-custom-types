{
    "typeName": "Terraform::OpsGenie::Escalation",
    "description": "Manages an Escalation within Opsgenie.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {
        "Repeat": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "CloseAlertAfterAll": {
                    "type": "boolean"
                },
                "Count": {
                    "type": "number"
                },
                "ResetRecipientStates": {
                    "type": "boolean"
                },
                "WaitInterval": {
                    "type": "number"
                }
            },
            "required": []
        },
        "Rules": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Condition": {
                    "type": "string",
                    "description": "The condition for notifying the recipient of escalation rule that is based on the alert state. Possible values are: if-not-acked and if-not-closed. If not given, if-not-acked is used."
                },
                "Delay": {
                    "type": "number",
                    "description": "Time delay of the escalation rule. This parameter takes an object that consists timeAmount field that takes time amount in minutes."
                },
                "NotifyType": {
                    "type": "string",
                    "description": "Recipient calculation logic for schedules. Possible values are:\n```\ndefault: on call users\nnext: next users in rotation\nprevious: previous users on rotation\nusers: users of the team\nadmins: admins of the team\nall: all members of the team\n```."
                },
                "Recipient": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Recipient"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "Condition",
                "Delay",
                "NotifyType"
            ]
        },
        "Recipient": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Id": {
                    "type": "string"
                },
                "Type": {
                    "type": "string"
                }
            },
            "required": []
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "Description": {
            "type": "string",
            "description": "Description of the escalation."
        },
        "Id": {
            "type": "string"
        },
        "Name": {
            "type": "string",
            "description": "Name of the escalation."
        },
        "OwnerTeamId": {
            "type": "string",
            "description": "Owner team id of the escalation."
        },
        "Repeat": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Repeat"
            }
        },
        "Rules": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Rules"
            },
            "minItems": 1
        },
        "Recipient": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Recipient"
            },
            "minItems": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "Name"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/Id"
    ],
    "primaryIdentifier": [
        "/properties/Id"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}